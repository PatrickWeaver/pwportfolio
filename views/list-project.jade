li.list-project
	if project.slug
		- var url = project.slug;
		a(href= "/projects/" + url) #{project.name}
	else
		span #{project.name}
	|  -- 
	if project.status
		a(href="/projects/?status=" + project.status.name).tag #{project.status.name}
	if project.tags
		ul
			each tag in project.tags
				a(href="/projects/?tags=" + tag)
					li.tag #{tag}
	if project.cover
		li
			img(src=project.cover).list-cover
	else
		| no cover
	if user
			a(href="/projects/" + project.slug + "/edit/").admin-link ğŸ“ Edit
			a(href="/projects/" + project.slug + "/delete/").delete.admin-link ğŸ—‘ Delete
			a(href="/projects/" + project.slug + "/toggle/" + !project.active + "/").admin-link
				if project.active
					| ğŸ” Deactivate
				else
					| ğŸ”“ Activate