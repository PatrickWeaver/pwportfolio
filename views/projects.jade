extends layout

block content
	div.page-header
		h1= title
		if !filter
			div(onclick="filterToggle()")#filter-toggle
				|🔀 Filter
			div#filter
				h3 Filter by status:
				ul
					each status in statusesArray
						if status != ""
							li
								a(href="/?status=" + status[0].name, class="status-tag-" + status[0].color ).tag=status[0].name
				h3 Filter by tag:
				ul
					each tag in tags
						if tag != ""
							a(href="/?tags=" + tag[0])
								li.tag=tag[0]
		else
			a(href="/")#filter-toggle ❌ Filter
		
	div.projects
		ul.project-list
			each project, index in projects
				if project.active
					include list-project

		if user
			h3 Inactive Projects:
			ul.project-list
				each project in projects
					if !project.active
						include list-project

		

